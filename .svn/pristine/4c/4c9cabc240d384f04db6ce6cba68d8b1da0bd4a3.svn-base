				var that=this
				if(type=="M"){
					that.showMonth='1'
				}else{
					that.showYear='1'
				}
				that.$axios({
                    url: 'http://dvtest.qineasy.com:8888/level/getLevelList', 
                    method: 'post',
                    params: {
                    	jsonObject: {
                    		'areaId':list.areaId,
                    		'levelType':type
                    	}
                    }
                })
				.then(function (response) {
					if(type=="Y"){
						that.yearLevelList=response.data.t
					}else{
						that.monthLevelList=response.data.t
					}
						console.log(response)
			    })
